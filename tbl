CREATE TABLE login_details_tbl (
    id SERIAL PRIMARY KEY,
    username VARCHAR(255),
    firstname VARCHAR(255),
    lastname VARCHAR(255),
    password VARCHAR(255),
    user_role INTEGER,
    profile VARCHAR(255),
    email VARCHAR(255)
);


CREATE TABLE product_details_tbl (
    id SERIAL PRIMARY KEY,
    productName VARCHAR(255),
    productCount VARCHAR(255),
    fileUploaded VARCHAR(255),
    productPrice INTEGER,
    productDescription VARCHAR(255),
    productTypes VARCHAR(255)
);

CREATE TABLE cart_details_tbl (
    id SERIAL PRIMARY KEY,
    itemId INTEGER REFERENCES product_details_tbl(id),
    productName VARCHAR(255),
    productCount VARCHAR(255),
    fileUploaded VARCHAR(255),
    productPrice INTEGER,
    productTypes VARCHAR(255)
);
